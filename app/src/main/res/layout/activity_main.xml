<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atelier3ti2018.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="31dp"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_load"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Image"
        android:onClick="startImageActivity"/>
    <Button
        android:id="@+id/gps_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Manager"
        android:onClick="startLocationActivity"/>

</LinearLayout>
